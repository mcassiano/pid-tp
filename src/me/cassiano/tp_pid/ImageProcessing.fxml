<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.glyphfont.Glyph?>
<?import org.controlsfx.control.RangeSlider?>
<VBox prefHeight="660.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.cassiano.tp_pid.ImageProcessingController">
  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="Arquivo">
          <items>
            <MenuItem mnemonicParsing="false" onAction="#openImageClicked" text="Abrir imagemâ€¦" />
            <!--<MenuItem mnemonicParsing="false" text="Sair" />-->
          </items>
        </Menu>
      </menus>
    </MenuBar>
      <ToolBar prefHeight="40.0" prefWidth="200.0">
         <items>
            <HBox prefHeight="30.0" prefWidth="200.0">
                <children>
                    <Button onAction="#openImageClicked">
                        <graphic>
                            <Glyph fontFamily="FontAwesome" icon="FOLDER_OPEN" />
                        </graphic>
                     <HBox.margin>
                        <Insets right="3.0" />
                     </HBox.margin>
                    </Button>

                    <Separator orientation="VERTICAL" />

                    <Button id="circle" onAction="#selectSeedShape">
                        <graphic>
                            <Glyph fontFamily="FontAwesome" icon="CIRCLE_ALT" />
                        </graphic>
                     <HBox.margin>
                        <Insets right="3.0" />
                     </HBox.margin>
                    </Button>

                    <Button id="square" onAction="#selectSeedShape">
                        <graphic>
                            <Glyph fontFamily="FontAwesome" icon="SQUARE_ALT" />
                        </graphic>
                     <HBox.margin>
                        <Insets right="3.0" />
                     </HBox.margin>
                    </Button>


                </children>
            </HBox>
         </items></ToolBar>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
       <children>
           <AnchorPane id="AnchorPane" fx:id="rootPane" pickOnBounds="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="220.0" AnchorPane.topAnchor="10.0">
               <children>
                  <Slider fx:id="zoomSlider" blockIncrement="1.0" disable="true" max="200.0" min="1.0" value="100.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" />
                   <Group id="Group" layoutX="0.0" layoutY="0.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"> <!-- onScroll="#scrolling">-->
                       <children>
                           <ScrollPane fx:id="scrollPaneImage" fitToHeight="true" fitToWidth="true" layoutX="0.0" layoutY="0.0" prefHeight="541.0" prefWidth="566.0">
                               <content>
                                   <Group id="Group" fx:id="rootGroup">
                                </Group>
                               </content>
                           </ScrollPane>
                       </children>
                   </Group>
               </children>
           </AnchorPane>
           <VBox AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
               <children>
                   <!--<Label text="Histograma" />
                   <ImageView fx:id="histogram" fitWidth="215.0" pickOnBounds="true" preserveRatio="true" />-->

                   <Button id="internalSeedButton" fx:id="inSeed" disable="true" mnemonicParsing="false" onAction="#inSeedClicked" prefHeight="26.0" prefWidth="183.0" text="Selecionar semente interna">
                     <VBox.margin>
                        <Insets bottom="5.0" />
                     </VBox.margin></Button>

                   <Button id="externalSeedButton" fx:id="outSeed" disable="true" mnemonicParsing="false" onAction="#outSeedClicked" prefWidth="183.0" text="Selecionar semente externa">
                     <VBox.margin>
                        <Insets bottom="5.0" />
                     </VBox.margin></Button>

                   <Button fx:id="clearSeedsButton" disable="true" mnemonicParsing="false" onAction="#clearSeeds" prefWidth="183.0" text="Limpar sementes">
                   </Button>

                   <RangeSlider
                       showTickLabels="true"
                       showTickMarks="true"
                       min="0"
                       max="255"
                       lowValue="0"
                       highValue="255"
                       blockIncrement="1"
                       fx:id="rangeSlider"
                       disable="true"/>

               </children>
           </VBox>
       </children>
    </AnchorPane>
  </children>
</VBox>
